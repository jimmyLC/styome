<div class="pincart">
<h1>你的訂單</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>收貨人名子</th>
      <th>收貨地址</th>
      <th>付款方式</th>
      <th>訂單狀態</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o, i| %>
    <tr class="success">
      <td><%= i %></td>
      <td><%= o.receive_name %></td>
      <td><%= o.receive_address %></td>
      <td><%= o.payment_type %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>