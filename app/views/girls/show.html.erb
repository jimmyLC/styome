<h1><%= "Show #{@girl.name} products" %></h1>

<% @girl.products.each do |p| %>
    <%= link_to (image_tag p.avatar.url(:medium)), product_path(p) %>
    <%= link_to p.title, product_path(p) %>
    <%= p.description %>
    <%= p.price %>
    <%= p.quantity %>
    <%= link_to "edit", edit_product_path(p) %>
    <%= link_to "destroy", product_path(p), method: :delete %>
<%end %>